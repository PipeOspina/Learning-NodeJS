extends layout

block content
    include header.pug
    .item
      form(method="post" action="/")
        fieldset
          .container.p1
            label.item.i-b.v-top.ph3.right(for="movie_id") IMDB Id:
            input.item.i-b.v-top.ph9#movie_id(type="text", name="movie_id" required)
          .container.p1
            label.item.i-b.v-top.ph3.right(for="title") Título:
            input.item.i-b.v-top.ph9#title(type="text", name="title" required)
          .container.p1
            label.item.i-b.v-top.ph3.right(for="release_year") Año:
            input.item.i-b.v-top.ph9#release_year(type="text", name="release_year" required)
          .container.p1
            label.item.i-b.v-top.ph3.right(for="rating") Calificación:
            input.item.i-b.v-top.ph9#rating(type="text", name="rating" required)
          .container.p1
            label.item.i-b.v-top.ph3.right(for="image") Poster:
            input.item.i-b.v-top.ph9#image(type="text", name="image" required)
          .container.p1
            input.item.ph4.mauto.button.add(type="submit", value="Agregar")